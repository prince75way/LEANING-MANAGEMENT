{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "User and Progress Tracking API",
    "description": "API for user authentication, course enrollment, progress tracking, and watched module updates."
  },
  "tag": ["User"],
  "host": "localhost:8000",
  "schemes": ["http"],
  "paths": {
    "/user/signup": {
      "post": {
        "summary": "User Signup",
        "description": "Registers a new user.",
        "parameters": [
          {
            "name": "name",
            "in": "body",
            "description": "User's name",
            "required": true,
            "type": "string"
          },
          {
            "name": "email",
            "in": "body",
            "description": "User's email",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "in": "body",
            "description": "User's password",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "User created successfully"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "summary": "User Login",
        "description": "Authenticates a user and returns a JWT token.",
        "parameters": [
          {
            "name": "email",
            "in": "body",
            "description": "User's email",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "in": "body",
            "description": "User's password",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Login successful, returns JWT token"
          },
          "400": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/user/watchedmodule/{courseId}": {
      "post": {
        "summary": "Update Watched Modules",
        "description": "Updates the watched modules for a specific course.",
        "parameters": [
          {
            "name": "courseId",
            "in": "path",
            "description": "ID of the course to update",
            "required": true,
            "type": "string"
          },
          {
            "name": "moduleId",
            "in": "body",
            "description": "ID of the module the user has watched",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Module updated successfully"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/user/progress": {
      "get": {
        "summary": "Get User Progress",
        "description": "Fetches the progress of the user for all enrolled courses.",
        "responses": {
          "200": {
            "description": "User progress fetched successfully",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "courseId": {
                    "type": "string"
                  },
                  "courseTitle": {
                    "type": "string"
                  },
                  "totalModules": {
                    "type": "integer"
                  },
                  "watchedModules": {
                    "type": "integer"
                  },
                  "progressPercentage": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request"
          }
        }
      }
    },
    "/user/refresh-token": {
      "post": {
        "summary": "Refresh Token",
        "description": "Generates a new access token using the refresh token.",
        "parameters": [
          {
            "name": "refreshToken",
            "in": "body",
            "description": "Refresh token to generate a new access token",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Access token refreshed successfully",
            "schema": {
              "type": "object",
              "properties": {
                "accessToken": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "Refresh token is required"
          },
          "403": {
            "description": "Invalid or expired refresh token"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "Module": {
      "type": "object",
      "properties": {
        "moduleId": {
          "type": "string"
        }
      }
    }
  }
}
