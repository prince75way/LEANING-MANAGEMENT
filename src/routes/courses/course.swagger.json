{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Course API",
    "description": "APIs for creating and enrolling in courses."
  },
  "tag": ["Course"],
  "host": "localhost:8000",
  "schemes": ["http"],
  "paths": {
    "/course/create": {
      "post": {
        "summary": "Create a new course",
        "description": "This endpoint allows the creation of a new course. The course requires a title, description, price, and associated instructor.",
        "parameters": [
          {
            "name": "title",
            "in": "formData",
            "description": "Title of the course",
            "required": true,
            "type": "string"
          },
          {
            "name": "description",
            "in": "formData",
            "description": "Description of the course",
            "required": true,
            "type": "string"
          },
          {
            "name": "price",
            "in": "formData",
            "description": "Price of the course",
            "required": true,
            "type": "number"
          },
          {
            "name": "instructorId",
            "in": "formData",
            "description": "ID of the instructor creating the course",
            "required": true,
            "type": "string"
          },
          {
            "name": "category",
            "in": "formData",
            "description": "Category of the course (optional)",
            "required": false,
            "type": "string"
          },
          {
            "name": "image",
            "in": "formData",
            "description": "Image representing the course (optional)",
            "required": false,
            "type": "string",
            "format": "binary"
          }
        ],
        "responses": {
          "201": {
            "description": "Course created successfully",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                },
                "course": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "price": {
                      "type": "number"
                    },
                    "instructorId": {
                      "type": "string"
                    },
                    "category": {
                      "type": "string"
                    },
                    "image": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request, missing required fields or invalid data"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/course/enroll": {
      "post": {
        "summary": "Enroll in a course",
        "description": "This endpoint allows a user to enroll in an existing course by providing the course ID and user ID.",
        "parameters": [
          {
            "name": "userId",
            "in": "formData",
            "description": "User ID of the person enrolling in the course",
            "required": true,
            "type": "string"
          },
          {
            "name": "courseId",
            "in": "formData",
            "description": "Course ID of the course the user wants to enroll in",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "User successfully enrolled in the course",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                },
                "enrollmentDetails": {
                  "type": "object",
                  "properties": {
                    "userId": {
                      "type": "string"
                    },
                    "courseId": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request, missing required fields or invalid data"
          },
          "404": {
            "description": "Course or User not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/course/edit/{courseId}": {
      "put": {
        "summary": "Edit an existing course",
        "description": "This endpoint allows an instructor to edit an existing course by providing the course ID and updated course details.",
        "parameters": [
          {
            "name": "courseId",
            "in": "path",
            "description": "ID of the course to edit",
            "required": true,
            "type": "string"
          },
          {
            "name": "title",
            "in": "formData",
            "description": "Updated title of the course",
            "required": false,
            "type": "string"
          },
          {
            "name": "description",
            "in": "formData",
            "description": "Updated description of the course",
            "required": false,
            "type": "string"
          },
          {
            "name": "price",
            "in": "formData",
            "description": "Updated price of the course",
            "required": false,
            "type": "number"
          },
          {
            "name": "category",
            "in": "formData",
            "description": "Updated category of the course (optional)",
            "required": false,
            "type": "string"
          },
          {
            "name": "image",
            "in": "formData",
            "description": "Updated image representing the course (optional)",
            "required": false,
            "type": "string",
            "format": "binary"
          }
        ],
        "responses": {
          "200": {
            "description": "Course updated successfully",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                },
                "course": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "price": {
                      "type": "number"
                    },
                    "instructorId": {
                      "type": "string"
                    },
                    "category": {
                      "type": "string"
                    },
                    "image": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request, missing required fields or invalid data"
          },
          "404": {
            "description": "Course not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/course/delete/{courseId}": {
      "delete": {
        "summary": "Delete a course",
        "description": "This endpoint allows an instructor to delete an existing course by providing the course ID.",
        "parameters": [
          {
            "name": "courseId",
            "in": "path",
            "description": "ID of the course to delete",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Course deleted successfully",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                },
                "courseId": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "Course not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "definitions": {
    "Course": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "instructorId": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "image": {
          "type": "string"
        }
      }
    },
    "Enrollment": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "courseId": {
          "type": "string"
        }
      }
    }
  }
}
